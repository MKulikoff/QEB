
{{#if questions.length}}
<div class="card_container">
{{#each questions}}
<div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-content">
        <span class="card-title">Вопрос: {{title}}</span>
          <li>Вариант А: {{optionA}}</li>
          <li>Вариант В: {{optionB}}</li>
          <li>Вариант С: {{optionC}}</li>
          <li>Вариант D: {{optionD}}</li>
          <li>Правильный ответ: {{correctOption}}</li>
          <a href="/question-edit/{{cards.id}}">Редактировать</a>
          <a href="/question-edit/{{cards.id}}">Удалить</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{/if}}
</div>