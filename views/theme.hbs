<div class="theme_container">
    <div class="theme">
        {{#if isAdmin}}
        <a href="/theme-edit/{{cards.id}}">Редактировать</a>
        <form action="/theme" method="POST" enctype="multipart/form-data">
        <label>
            <input type="file" name="question" class="question_input">  
            <button class="profile_img_btn" type="submit">Cохранить</button>
        </label> 
        <input type="hidden" name="id" value="{{cards.id}}">
         <input type="hidden" name="_csrf" value="{{csrf}}">
        </form>
        {{/if}}
        <h1>{{cards.title}}</h1>
        <p>{{cards.description}}</p>
        <img src="{{cards.img}}" alt="{{cards.title}}">
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input type="hidden" name="_csrf" value="{{csrf}}">
                        <input type="hidden" name="id" value="{{cards.id}}">
                        <p>{{cards.text}}</p>
                    </div>
                </div>
        </div>
        </form>
    </div>
</div>