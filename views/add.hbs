<div class="add_section">
<div class="add_container">
  <div class="add_h">
    <h1>Добавить новую тему</h1>
  </div>

  {{#if error}}
    <p class="alert">{{error}}</p>
  {{/if}}

  <form action="/add" method="POST" novalidate>
    <div class="input-field">
      <label for="title">Название темы</label>
      <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
      <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
      <label for="description">Краткое описание</label>
      <input id="description" name="description" type="text" class="description" class="validate" required value="{{data.title}}">
      <span class="helper-text" data-error="Введите описание"></span>
    </div>

    <div class="input-field">
      <label for="img">URL картинки</label>
      <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
      <span class="helper-text" data-error="Введите url картинки"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Добавить</button>
  </form>
</div>
</div>