<div class="main_container">
    <div class="login">
        {{#if loginError}}
        <p class="alert">{{loginError}}</p>
        {{/if}}
        <div class="container">
            <form action="/login" class="auth_form" method="POST">
                <div class="form-control">
                    <label for="email" class="login_label">Email</label>
                    <input type="email" id="email" name="email" class="login_input" placeholder="Enter your email">
                </div>

                <div class="form-control">
                    <label for="password" class="login_label">Password</label>
                    <input type="password" id="password" name="password" class="login_input" placeholder="Password">
                </div>

                <div class="checkbox-container">
                    <a href="/reset">Forgot Password</a>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button class="btn" type="submit">Log In</button>

                <small>Don't have an account? <a href="/registration">Sign up</a></small>
            </form>

        </div>
    </div>
</div>