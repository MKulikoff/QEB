
{{#if cards.length}}
<div class="card_container">
{{#each cards}}
<div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{img}}">
        </div>
        <div class="card-content">
        <span class="card-title">{{title}}</span>
          <p>{{description}}</p>
        </div>
        <div class="card-action">
          <a href="#">Изучить</a>
          <hr>
          <a href="#">Играть</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{/if}}
</div>