<div class="editQuestion_container">
      <div class="add_container">
            <h1>Редактировать вопрос</h1>


            {{#if error}}
            <p class="alert">{{error}}</p>
            {{/if}}

            <form action="/updateQuestion" method="POST">
                  <div class="input-field">
                        <label for="questionTitle">Вопрос</label>
                        <input name="questionTitle" type="text" class="validate" required value="{{question.title}}">
                        <span class="helper-text" data-error="Введите вопрос"></span>
                  </div>

                  <div class="input-field">
                        <label for="optionA">Вариант А</label>
                        <input name="optionA" type="text" class="validate" required value="{{question.optionA}}">
                        <span class="helper-text" data-error="Укажите вариант А"></span>
                  </div>

                  <div class="input-field">
                        <label for="optionB">Вариант В</label>
                        <input name="optionB" type="text" class="validate" required value="{{question.optionB}}">
                        <span class="helper-text" data-error="Укажите вариант B"></span>
                  </div>

                  <div class="input-field">
                        <label for="optionC">Вариант C</label>
                        <input name="optionC" type="text" class="validate" required value="{{question.optionC}}">
                        <span class="helper-text" data-error="Укажите вариант C"></span>
                  </div>

                  <div class="input-field">
                        <label for="optionD">Вариант D</label>
                        <input name="optionD" type="text" class="validate" required value="{{question.optionD}}">
                        <span class="helper-text" data-error="Укажите вариант D"></span>
                  </div>

                  <div class="input-field">
                        <label for="correctOption">Правильный вариант</label>
                        <input name="correctOption" type="text" class="validate" required
                              value="{{question.correctOption}}">
                        <span class="helper-text" data-error="Укажите правильный вариант"></span>
                  </div>

                  <div class="edit_question_btn">
                        <input type="hidden" name="id" value="{{question.id}}">
                        <button class="btn">Сохранить изменения</button>
                        <input type="hidden" name="_csrf" value="{{csrf}}">
            </form>

            <form action="/deleteQuestion" method="POST">
                  <button class="btn">Удалить</button>
                  <input type="hidden" name="_csrf" value="{{csrf}}">
            </form>
      </div>
</div>
</div>